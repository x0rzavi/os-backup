# gcc + bfd + noLTO
CC="gcc"
CXX="g++"

COMMON_FLAGS="-march=native -O3 -pipe"
CFLAGS="${COMMON_FLAGS}"
CXXFLAGS="${COMMON_FLAGS}"
FCFLAGS="${COMMON_FLAGS}"
FFLAGS="${COMMON_FLAGS}"
LDFLAGS="-Wl,-O2 -Wl,--as-needed -Wl,--strip-debug"

AR="${CC}-ar"
NM="${CC}-nm"
RANLIB="${CC}-ranlib"
AS="${CHOST}-as"
STRIP="${CHOST}-strip"
